{
  "firestore": {
    "rules": "firestore.rules"
  },
  "functions": {
    "source": "functions",
    "predeploy": ["pnpm --dir functions install --frozen-lockfile"]
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      { "source": "/bgg/**", "function": "bggProxy" },
      { "source": "/si/**", "function": "spiritIslandProxy" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
